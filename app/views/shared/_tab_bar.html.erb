<div class="tab-bar" data-controller="tab-bar">
  <ul class="tab-bar__nav">
    <li class="tab-bar__nav-item">
      <%= link_to articles_path, class: "tab-bar__nav-link #{'active' if current_page?(articles_path)}" do %>
        <i class="fa-solid fa-newspaper"></i>
        Articles
      <% end %>
    </li>

    <li class="tab-bar__nav-item">
      <%= link_to bookmarks_path, class: "tab-bar__nav-link #{'active' if current_page?(bookmarks_path)}" do %>
        <i class="fa-regular fa-bookmark"></i>
        Saved
      <% end %>
    </li>

    <li class="tab-bar__nav-item">
      <%= link_to user_articles_path, class: "tab-bar__nav-link #{'active' if (current_page?(user_articles_path) || current_page?(new_user_article_path))}" do %>
        <i class="fa-solid fa-plus"></i>
        My Articles
      <% end %>
    </li>

    <li class="tab-bar__nav-item">
      <%= link_to root_path, class: "tab-bar__nav-link #{'active' if current_page?(root_path)}" do %>
        <i class="fa-solid fa-house"></i>
        Home
      <% end %>
    </li>
  </ul>
</div>
