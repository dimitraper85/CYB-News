<div class="tab-bar" data-controller="tab-bar">
  <ul class="tab-bar__nav">
    <li class="tab-bar__nav-item">
      <%= link_to articles_path, class: "tab-bar__nav-link #{'active' if current_page?(articles_path)}", data: {turbo: false} do %>
        <i class="fa-solid fa-newspaper"></i>
        Articles
      <% end %>
    </li>

    <li class="tab-bar__nav-item">
      <%= link_to bookmarks_path, class: "tab-bar__nav-link #{'active' if current_page?(bookmarks_path)}", data: {turbo: false} do %>
        <i class="fa-regular fa-bookmark"></i>
        Saved
      <% end %>
    </li>

    <li class="tab-bar__nav-item">
      <%= link_to user_articles_path, class: "tab-bar__plus-link #{'active' if (current_page?(user_articles_path) || current_page?(new_user_article_path))}", data: {turbo: false} do %>
        <i class="fa-solid fa-plus"></i>
        My Articles
      <% end %>
    </li>

     <% if user_signed_in? %>
      <li class="tab-bar__nav-item">
        <%= link_to profile_path, class: "tab-bar__nav-link #{'active' if current_page?(profile_path)}", data: {turbo: false} do %>
          <i class="fa-regular fa-user"></i>
          Profile
        <% end %>
      </li>
    <% else %>
      <li class="tab-bar__nav-item">
        <%= link_to profile_path, class: "tab-bar__nav-link #{'active' if current_page?(new_user_session_path)}", data: {turbo: false} do %>
          <i class="fa-regular fa-user"></i>
          Sign in
        <% end %>
      </li>
    <% end %>


  </ul>
</div>
