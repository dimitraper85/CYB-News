<div class="profile-page">
  <% if user_signed_in? %>
    <div class="profile-header">
      <h2><%= @user.username %></h2>
      <p>Joined in <%= @user.created_at.strftime("%B %Y") %></p>
      <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-edit-profile" %>
    </div>

    <div class="profile-actions">
      <%= link_to "Log out", destroy_user_session_path, class: "app-button", data: {turbo_method: :delete} %>
    </div>

    <% else %>
      <div class="profile-actions">
        <%= link_to 'Login', new_user_session_path, class: "app-button" %>
      </div>
  <% end %>

</div>
